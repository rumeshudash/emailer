{
    "name": "emailer",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --port 3334",
        "build": "next build",
        "start": "next start --port 3334",
        "lint": "next lint",
        "dev:email": "email dev -p 3333 -d ./src/emails",
        "build:email": "email build --packageManager yarn --dir ./src/emails",
        "export:email": "email export --dir ./src/emails",
        "start:email": "email start --dir ./src/emails"
    },
    "dependencies": {
        "@react-email/components": "0.0.36",
        "@react-email/render": "^1.0.6",
        "@react-email/tailwind": "^1.0.4",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "next": "15.2.5",
        "react": "^19",
        "react-dom": "^19",
        "react-email": "4.0.6",
        "react-icons": "^5.5.0",
        "tailwind-merge": "^2.3.0",
        "tailwindcss": "^3.4.17"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^8",
        "eslint-config-next": "15.2.5",
        "ts-loader": "^9.5.1",
        "typescript": "^5"
    },
    "resolutions": {
        "strip-ansi": "6.0.1",
        "string-width": "4.1.0"
    }
}
